<style>
    #map {
        height: 400px;
        width: 100%;
    }
</style>
{{> vendorNavbar/vendorNavbar}}
{{!-- Main Vendor Info Area --}}
<div class="container">
    <div class="card">
        <div class="card-header text-center">
            <h1 class="truckName" id="truckName">TRUCK NAME HERE</h1>
        </div>
        <br>
        <div class="card-body text-center">
            <div class="card-header">
                <h3>Truck Location</h3>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="col-md-4">
                            <input type="address" class="form-control" id="userAddress" placeholder="Address" required>
                            <div class="invalid-feedback">
                                Please provide a valid address.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <input type="city" class="form-control" id="vendorCity" placeholder="City" required>
                            <div class="invalid-feedback">
                                Please provide a valid city.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <input type="zip" class="form-control" id="vendorZip" placeholder="Zip Code" required>
                            <div class="invalid-feedback">
                                Please provide a valid zip.
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <br>
            <div class="card-header">
                <h3>Auto Check-in:</h3>
            </div>
            <div class="card-body">
                <button class="btn btn-success" type="submit" id="vendorCheckIn">Check-In</button>
            </div>
            <br>
        </div>
        {{!-- Vendor Info Area Ends --}}
        {{!-- Search and Map Area --}}
        <div class="container">
            <h3>Search:</h3>
            <div class="row">
                <div class="col-md-4">
                    <form class="form-inline">
                        <select id="searchBy">
                            <option value="" disabled selected>Search option</option>
                            <option value="foodCategory1">Category</option>
                            <option value="truckName">Truck Name</option>
                        </select>
                        <input type="search" class="form-control" id="categorySearch" placeholder="Name or Category"
                            required>
                    </form>
                    {{!-- Area to show search results --}}
                    <div class="row">
                        <div id="searchResults"></div>
                    </div>
                    {{!-- End Search Results Area --}}
                </div>
                {{!-- Google Map Area --}}
                <div class="col">
                    <div class="row mb-3">
                        <div id="map"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<hr>
